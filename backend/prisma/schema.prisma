datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        Int      @id @default(autoincrement())
  name      String
  due       DateTime
  status    String
  memberId  Int? 
  member    Member?  @relation(fields: [memberId], references: [id])
  createdAt DateTime @default(now())
}

model Member {
  id      Int      @id @default(autoincrement())
  name    String
  role    String
  tasks   Task[]
}
